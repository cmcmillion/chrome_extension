{
  "name": "Add Website to Mem",
  "version": "1.0.0",
  "description": "An extension for easily adding a website to your Mems!",
  "manifest_version": 3,
  "permissions": ["tabs", "scripting", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "author": "Connor M",
  "action": {
    "default_popup": "./popup/popup.html",
    "default_title": "Add Website to Mem"
  },
  "icons": {
    "16": "./icons/icon16.png",
    "48": "/icons/icon48.png",
    "128": "/icons/icon128.png"
  }
}
